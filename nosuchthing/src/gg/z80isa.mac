.macro jp flag, dst
  .if .xmatch ({flag}, hl)
    .if .blank ({dst})
      .byte $E9
    .else
      .error "jp hl is not conditional"
    .endif
  .elseif .xmatch ({flag}, ix)
    .if .blank ({dst})
      .byte $DD,$E9
    .else
      .error "jp ix is not conditional"
    .endif
  .elseif .xmatch ({flag}, iy)
    .if .blank ({dst})
      .byte $FD,$E9
    .else
      .error "jp iy is not conditional"
    .endif
  .elseif .blank ({dst})
    .byte $C3
    .word flag
  .else
    _z80_conditional $C2, flag
    .word dst
  .endif
.endmacro

